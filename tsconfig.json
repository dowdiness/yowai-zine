{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES6", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types"]
}
